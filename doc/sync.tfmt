sync(directory) "Move files to a folder."
{
    $(directory) "/"
    <albumartist> | <artist>
    "/"

    <album> & (
        <date> & (
            $year_from_date(<date>)
            <albumsort> & ("." $num(<albumsort>, 2) )
            " - "
        )
        <album>
    ) && "/"
    <discnumber> & $num(<discnumber>, 1)
    <tracknumber> & ($num(<tracknumber>, 2)" - ")
    <albumartist> & (<artist>" - ")
    <title>
}
